{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "node_modules"]
}
